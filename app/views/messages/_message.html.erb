<div class="chat-content">
  <div class="name-date">
    <div class="content-name">
      <!-- 投稿したユーザー名情報を出力する -->
      <%= message.user.name %>

    </div>
    <div class="content-date">
      <!-- 投稿した時刻を出力する -->
      <%= message.created_at %>
    </div>
  </div>
  <div class="content-message">
      <!-- 投稿したメッセージ内容を記述する -->
      <%= message.content %>
  </div>
</div>
