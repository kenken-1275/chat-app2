<div class="side-bar">
  <div class="side-bar-top">
    <div class="name">
      <%= link_to current_user.name , edit_user_path(current_user.id) %>
    </div>
    <div class="chat-new">
      <%= link_to 'チャットを作成する' , new_room_path %>
    </div>
  </div>
  <div class="side-bar-main">
    <% current_user.rooms.each do |room| %>
      <div class="side-room-name">
        <a href=""><%= room.name %></a>
      </div>
    <% end %>
  </div>
</div>